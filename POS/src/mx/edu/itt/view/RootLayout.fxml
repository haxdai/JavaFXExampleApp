   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleShowUserOverView" text="Usuarios" />
                  <MenuItem mnemonicParsing="false" onAction="#handleShowProductOverView" text="Productos" />
              <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Salir" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
